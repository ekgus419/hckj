@charset "UTF-8";

/*
 * Slideshow
 */

.slideshow {
    background-color: rgb(0, 0, 0);
    height: 300px;
    overflow: hidden;
    position: relative;
	width:700px;
	margin: 0 auto;
	margin-bottom: 30px;
}

.slideshow-slides {
    height: 100%;
    position: absolute; 
    width: 100%;
    /* left は JavaScript で指定 */
}
.slideshow-slides .slide {
    height: 100%;
    overflow: hidden;
    position: absolute;
    width: 100%;
    /* left は JavaScript で指定 */
}
.slideshow-slides .slide img {
    left: 50%;
    margin-left: -800px;
    position: absolute;
}

.slideshow-nav a,
.slideshow-indicator a {
/*    background-color: rgba(0, 0, 0, 0); /* for IE9 */
    overflow: hidden;
}
.slideshow-nav a:before,
.slideshow-indicator a:before {
    content: url(../images/sprites.png);
    display: inline-block;
/*    font-size: 0;
    line-height: 0;*/
}

.slideshow-nav a {
    position: absolute;
    top: 50%; /* 이미지의 세로의 정 가운데 위치 */
    left: 50%; /* 이미지의 가로의 정 가운데 위치 */
    width: 72px; /* 버튼 이미지의 가로 세로 크기지정 */
    height: 72px;
    margin-top: -36px; /* 버튼 이미지의 반을 마진으로 지정  */
}
.slideshow-nav a.prev {
    margin-left: -370px;
}
.slideshow-nav a.prev:before {
    margin-top: -20px;    
}
.slideshow-nav a.next {
    margin-left: 295px;
}

.slideshow-nav a.next:before {
    margin-left: -80px;
    margin-top: -20px;
}
/* 처음이미지와 마지막 이미지 좌우버튼 나오지 않도록 스크립트와 연동 */
.slideshow-nav a.disabled {
    display: none;
}

.slideshow-indicator {
    bottom: 30px;
    height: 16px;
    left: 0;
    position: absolute;
    right: 0;
    text-align: center;
}
.slideshow-indicator a {
    display: inline-block;
    width: 16px;
    height: 16px;
    margin-left: 3px;
    margin-right: 3px;
}
/* 지금 활성화된 인디케이터의 커서는 링크가 아닌 화살표로 변경 */
.slideshow-indicator a.active {
    cursor: default;
}
.slideshow-indicator a:before {
    margin-left: -110px;/*이미지에서 비활성화된 이미지에서는 흰색 점을 이미지로 사용 */
}
.slideshow-indicator a.active:before {
    margin-left: -130px;/*이미지에서 활성화된 이미지는 검은색 점을 선택하여 인디케이터의 이미지로 사용 */
}

/* JavsScript 無効時 
.no-js .slideshow {
    height: auto;
}
.no-js .slideshow-slides {
    height: auto;
    position: static;
}
.no-js .slideshow-slides .slide {
    display: block;
    height: auto;
    position: static;
}
.no-js .slideshow-slides .slide img {
    margin: auto;
    position: static;
}
.no-js .slideshow-nav,
.no-js .slideshow-indicator {
    display: none;
}
