			// 메뉴에 마우스 오버 했을 때 서브 메뉴 나타냄
			$("ul.top-menu li").hover(function() {
			 
				$("li:not(:animated)",this).slideDown("fast");
			 
			}, function(){
				 
				$("li",this).slideUp("fast");
				 
			});
			
		})
