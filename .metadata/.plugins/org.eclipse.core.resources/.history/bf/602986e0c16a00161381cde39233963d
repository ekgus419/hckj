		public boolean modify(int ID);
		
		// 글 삭제 
		public boolean delete(int ID);
		
		// 글 답변 등록
		public int replyInsert(Notice notice);
		
		// 조회수 업데이트 
		public void setHitUpdate(int ID);
		
		// 글쓴이인지 확인 
		public boolean isBoardWriter(int ID, String WRITER);
	
