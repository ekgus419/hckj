 	<script>
		$(function(){
			
			$(".sub-menu").hide();
			
			 $(".top-menu").hover(function() { //마우스를 topnav에 오버시
			        $(this).children().find(".sub-menu").slideDown('fast').show(); //subnav가 내려옴.
			        }, function(){  
			            $(this).children().find(".sub-menu").slideUp('fast'); //subnav에서 마우스 벗어났을 시 원위치시킴  
			        });  
			    });
			
		})
	</script>
